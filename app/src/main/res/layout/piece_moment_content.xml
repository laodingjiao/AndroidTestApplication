<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_medium">
        <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="这里的天空超级蓝啊！"
                android:textColorLink="@color/blue1"
                style="@style/moment_body"/>

        <HorizontalScrollView
            android:id="@+id/layout_imageTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:fadingEdge="none"
            android:scrollbars="none" >
            <LinearLayout
                android:id="@+id/imageTable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <LinearLayout
                android:id="@+id/mic_layout"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:visibility="visible"
                android:gravity="center"
                android:orientation="horizontal">
            <FrameLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@color/text_blue1"
                    android:layout_gravity="center_vertical">
                <ImageView
                        android:id="@+id/btn_play"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/timeline_player_play"
                        android:clickable="false"/>
                <ProgressBar
                        android:id="@+id/progress"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/txt_loc"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:drawableLeft="@drawable/write_location_smail_a"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:textColor="@color/event_blue"/>

        <!-- survey layout -->
        <LinearLayout
                android:id="@+id/vote_survey_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:orientation="vertical"
                android:visibility="gone">
            <TextView
                    android:id="@+id/survey_dead_line_indicate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/event_blue"/>
            <!--<ListView-->
            <!--android:id="@+id/vote_survey_options"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:cacheColorHint="@color/transparent"-->
            <!--android:scrollbars="none"-->
            <!--android:divider="@null"-->
            <!--android:dividerHeight="5dp"/>-->
            <Button
                    android:id="@+id/vote_survey_button"
                    android:layout_height="@dimen/emergency_contact_button_height"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:gravity="center"
                    android:text="@string/moment_vote_btn"
                    android:textSize="@dimen/emergency_contact_status_title_txt_size"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_gray_selector"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>